{
  "name": "api-chama-corrida",
  "version": "1.0.0",
  "description": "API simples para sistema de corridas",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "test": "mocha \"test/**/*.test.js\" --reporter spec --timeout 5000",
    "test:watch": "mocha \"test/**/*.test.js\" --reporter spec --timeout 5000 --watch",
    "test:coverage": "mocha \"test/**/*.test.js\" --reporter spec --timeout 5000 --reporter mocha-junit-reporter",
    "test:mochawesome": "mocha \"test/**/*.test.js\" --reporter mochawesome --reporter-options configFile=test/config/mochawesome.json --timeout 5000"
  },
  "dependencies": {
    "express": "^4.18.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "mocha": "^10.2.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "api",
    "corridas",
    "uber",
    "99"
  ],
  "author": "Portfolio",
  "license": "MIT"
}
